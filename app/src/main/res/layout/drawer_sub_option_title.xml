<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e8e5e8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/drawer_item_padding"
                android:paddingLeft="16dp"
                android:paddingRight="@dimen/drawer_item_vertical_padding"
                android:paddingTop="@dimen/drawer_item_padding">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:fontFamily="sans-serif"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/drawer_item_text"/>
</RelativeLayout>