<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/logo_main"
            android:layout_marginBottom="70dp"
            android:layout_width="145dp"
            android:layout_height="145dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_facebook_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            fancy:fb_defaultColor="#236785"
            fancy:fb_focusColor="#5474b8"
            fancy:fb_fontIconSize="30dp"
            fancy:fb_fontIconResource="&#xf082;"
            fancy:fb_iconPosition="left"
            fancy:fb_iconPaddingRight="5dp"
            fancy:fb_radius="0dp"
            fancy:fb_text="Login with Facebook" />

        <TextView
            android:padding="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR" />

        <TextView
            android:id="@+id/button_signup"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/terms_and_policy_txt"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By signing up, you agree to our terms &amp; privacy policy" />

        <View
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.3"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/login_txt"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log in." />
    </LinearLayout>

</RelativeLayout>